<%- include header %>

<section>
    <div class="jumbo jumbo--full-screen">

        <div data-animate="animated fadeIn animatedsuperslow animateddelay2" class="background-image" style=" background-image:url(/img/bikes.jpeg);"></div>

        <div class="jumbo__overlay"></div>

        <div class="jumbo__content">
            <h1 class="headline margin-bottom--md">Kilometrikisa login</h1>

            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">

                        <div class="container-box">

                            <% if (error) { %>
                                <div class="alert alert-danger" role="alert">
                                        Incorrect username or password.
                                    </div>
                            <% } %>

                            <form action="/kilometrikisa/authhandler" method="POST">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Username</label>
                                    <input type="input" class="form-control" name="username" placeholder="Username" autofocus required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Password</label>
                                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>



                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div><!-- end of jumbo -->
</section>

<%- include footer %>
